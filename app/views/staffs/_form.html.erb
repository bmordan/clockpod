<%= form_for @staff do |f|%>
	<% if @staff.errors.any? %>
      <div class="errors">
        <%= @staff.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </div>
    <% end %>
    
    <li> <%= f.label :name %> : <%= f.text_field :name %></li>
    <li> <%= f.label :start_time %> : <%= f.text_field :start, :placeholder => "HH:MM" %></li>
    <li> <%= f.label :finish_time %> : <%= f.text_field :finish, :placeholder => "HH:MM" %></li>
    
    <li> <%= f.submit %> </li>
<% end %>